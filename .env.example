# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# OpenAI API (for language model access)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API (for model downloads and uploads)
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# AWS Configuration (if using AWS for data storage/compute)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-west-2
AWS_S3_BUCKET=your-fijian-data-bucket

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/fijian_data
MONGODB_URI=mongodb://localhost:27017/fijian_data

# Web Scraping Configuration
USER_AGENT=FijianDataBot/1.0 (+https://github.com/tuitige/fijian-data-ft)
REQUEST_DELAY=1.0
MAX_CONCURRENT_REQUESTS=5

# Data Processing Configuration
BATCH_SIZE=1000
MAX_SEQUENCE_LENGTH=512
TRAIN_TEST_SPLIT=0.8

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/fijian_data_pipeline.log

# Model Training Configuration
LEARNING_RATE=2e-5
NUM_TRAIN_EPOCHS=3
WARMUP_STEPS=500
WEIGHT_DECAY=0.01

# External APIs (add as needed)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key
AZURE_TRANSLATOR_KEY=your_azure_translator_key
AZURE_TRANSLATOR_REGION=your_azure_region